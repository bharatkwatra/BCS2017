@using BCS2017
@model BCS2017.Models.RegistrationVM
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="container">
    @using (Html.BeginForm("Registration", "Registration", FormMethod.Post, new { @onsubmit = "return Formvalidation()" }))
    {
    <div class="row">
        <div class="input-group">
            <div class="col-md-6">
                <div class="col-md-3">
                    <label class="label-default mandatory" style="font-weight:bold"> URID</label>
                    @Html.TextBoxFor(m => m.URID)
                </div>
                
            </div>
            <div class="col-md-3">
                @Html.DropDownListFor(n => n.CategoryID,new SelectList(Model.ddlCtegory, "CategoryName", "Select"))
                @Html.DropDownListFor(m => m.ddlCtegory, new List<SelectListItem> { new SelectListItem { Value = "CategoryName", Text = "Select" } })

            </div>
        </div>
    </div>

    }
</div>